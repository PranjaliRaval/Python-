# Probelem Statment 4
# Find the  binary equivalent string of a given integer
a_number = 2 
print('The binary equivalent of 2 is:', bin(a_number))


# Problem Statement 5
# Find the boolean value of a specified object.
test = []
print(test,'is',bool(test))
test = [0]
print(test,'is',bool(test))
test = 0.0
print(test,'is',bool(test))
test = None
print(test,'is',bool(test))
test = True
print(test,'is',bool(test))
test = 'This is Python Lab'
print(test,'is',bool(test))



